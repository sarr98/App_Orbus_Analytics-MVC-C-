        @section scripts
    {
            <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
            <script>
            // Récupérer les données du ViewBag
            var moisUniques = @Html.Raw(Json.Encode(ViewBag.MoisUniques));
            var resultatsGroupes = @Html.Raw(Json.Encode(ViewBag.ResultatsGroupes));

            // Récupérer les totaux par mois pour chaque groupe
            var data = {
                labels: moisUniques,
                datasets: resultatsGroupes.map(function (resultatGroupe) {
                    return {
                        label: resultatGroupe.Operation,
                        data: moisUniques.map(function (mois) {
                            var itemTotal = Model.find(function (m) {
                                return m.Operation === resultatGroupe.Operation && m.Lettres === mois;
                            });
                            return itemTotal ? itemTotal.Total : 0;
                        }),
                        backgroundColor: 'rgba(75, 192, 192, 0.2)',
                        borderColor: 'rgba(75, 192, 192, 1)',
                        borderWidth: 1
                    };
                })
            };

            // Configurer les options du graphique à barres
            var options = {
                responsive: true,
                scales: {
                    x: {
                        stacked: true
                    },
                    y: {
                        stacked: true
                    }
                }
            };

            // Créer le graphique à barres
            var ctx = document.getElementById('myChart').getContext('2d');
            var barChart = new Chart(ctx, {
                type: 'bar',
                data: data,
                options: options
            });
        }
            </script>
        }



