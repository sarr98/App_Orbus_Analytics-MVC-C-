                                            @foreach (var resultatGroupe in (List<AppOrbusAnalytics.Models.ResultatStatGlobalValeur>)ViewBag.ResultatsGroupes)
                                            {
                                                <tr>
                                                    <td>@resultatGroupe.Operation</td>
                                                    @foreach (var mois in ViewBag.MoisUniques)
