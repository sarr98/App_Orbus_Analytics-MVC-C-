
@{
    ViewBag.Title = "Inscription";
}


<div class="content">
    <div class="container-fluid">
        <div class="row justify-content-center">
            <div class="col-md-6">
                <div class="card">
                    <div class="card-header card-header-icon">
                        <div class="card-icon">
                            <i class="material-icons">person_add</i>
                        </div>
                        <h4 class="card-title"><b>Page D'Inscription</b></h4>
                    </div>
                    <div class="card-body">
                        <form method="post" action="/Compte/Inscription" class="my-form">


                            <div class="form-group">
                                <input type="text" name="IdOrbus" class="form-control" placeholder="Id Orbus ou Code PPM" />
                            </div>

                            <div class="form-group">
                                <input type="text" name="Adresse" class="form-control" placeholder="Adresse" />
                            </div>

                            <div class="form-group">
                                <input type="text" name="Telephone" class="form-control" placeholder="Téléphone" />
                            </div>
                            
                           <div class="form-group">
                                <select name="TypeEntreprise" class="form-control">
                                    <option value="Option 1">-- Sélectionner un type d'entreprise --</option>
                                    <option value="Option 2">Option 2</option>
                                    <option value="Option 3">Option 3</option>
                                </select>
                            </div>
                            <div class="form-group">
                                <button type="submit" class="btn btn-primary btn-center mt-5 w-75">Soumettre</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .my-form {
        margin-top: 20px;
        margin-bottom: 20px;
    }

    .form-group {
        margin-bottom: 20px;
    }

    .btn-center {
        display: block;
        margin: 0 auto;
    }
</style>

