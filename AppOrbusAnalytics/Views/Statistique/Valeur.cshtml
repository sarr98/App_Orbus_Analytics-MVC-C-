@using (Html.BeginForm("Valeur", "Statistique", FormMethod.Post, new { @class = "form-horizontal" }))
{
    @Html.AntiForgeryToken()
    if (!string.IsNullOrEmpty(ViewBag.Error))
    {
        <div id="errorMessage" class="alert alert-danger">
            @ViewBag.Error
        </div>
    }
    <div class="content">
